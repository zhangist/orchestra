html {
  font-size: 12px;
}

html, body, #root {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  position: relative;
}

.header {
  height: 48px;
  background: #fff;
  position: absolute;
  top: 0px;
  right: 0px;
  left: 0px;
}

.content {
  color: #fff;
  background: #333;
  position: absolute;
  top: 48px;
  right: 0px;
  bottom: 0px;
  left: 0px;
}
